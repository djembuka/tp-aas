@import '../../styl/component-include.styl'

.b-num-blocks
  display flex
  flex-wrap wrap
  column-gap 30px
  row-gap 10px

  @media( max-width 600px )
    flex-wrap nowrap
    overflow auto
    padding-bottom 5px

.b-num-block
  background-color #F0F5FC
  padding 15px
  border-radius 10px
  color #5F7696
  width 138px
  display flex
  justify-content space-between
  align-items center

  &:last-child
    margin-right 0

  &__data
    display flex
    flex-shrink 0
    flex-direction column
    justify-content space-around
    max-width 100%
    height 100%

  &__icon
    border-left 1px solid #C2DDC3
    padding 10px 0 10px 18px
    margin-left 20px

  &.inactive
    background-color #fafafa
    color #9b9b9b

  &.b-num-block--selected
    background-color #E1F8E2
    color #245A28
    width auto
    cursor pointer

  &--none
    display none

  @media( max-width 600px )
    flex-shrink 0

  i
    font-size $10px
    font-style normal
    display block
    margin-bottom 8px
    line-height normal

  b,
  &__b
    font-size $24px
    font-weight $bold
    line-height normal