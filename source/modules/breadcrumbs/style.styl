@import '../../styl/component-include.styl'

.b-breadcrumbs
  display flex
  flex-wrap wrap
  gap 10px 30px
  min-height 24px

  &.ph-block--animated
    
    &:after
      background-color transparent
      width auto
      opacity 0
      pointer-events none
      z-index 1

    a,
    span
      pointer-events auto
      opacity 1

  a,
  span
    display inline-block
    vertical-align top
    font-size $10px
    font-family $roboto
    font-style normal
    font-weight $normal
    line-height normal

  span
    color #9b9b9b