@import '../../styl/component-include.styl'

.table,
.table-responsive
  font-family $roboto

  th,
  td
    font-size $14px
    text-align center
    vertical-align middle
    padding 1.25rem 1.5rem
    border-top none
    border-bottom 1px solid $line-color

    &.asc,
    &.desc
      background-color #f2e4d866

  thead th
    border-top none
    border-bottom 1px solid $line-color
    vertical-align middle

  th
    font-family $roboto
    font-weight 600
    line-height 1rem
    cursor pointer
    padding-right 35px
    padding-left 35px

    &:first-child
      text-align left
      padding-left 1.5rem

    &.asc,
    &.desc
      color $secondary-color-2
      position relative

      &:before
        content ''
        width 17px
        height 17px
        border-radius 51%
        position absolute
        top 50%
        right 15px
        margin-top -8px
        background-color #EA5E21
        z-index 1

      &:after
        content ''
        width 5px
        height 5px
        border-right 1px solid #fff
        border-bottom 1px solid #fff
        transform( rotate( 45deg ))
        position absolute
        top 50%
        right 21px
        margin-top -3px
        z-index 2

    &.asc

      &:after
        transform( rotate( -135deg ))
        margin-top -1px

  tbody
  
    th
      padding-top 1.5rem

    tr
      transition( background-color .5s ease )
    
      &:hover
        background-color #fcfcfc

      &[data-url]
        cursor pointer

  &.table--sm

    th,
    td
      font-family $roboto
      font-size $14px

  &.table--center

    th,
    td
      text-align center
      vertical-align middle

      &:first-child
        text-align left

  &.table--sortable

    th
      cursor pointer
      padding-right 35px

    th,
    td
      border-top none
      border-bottom 1px solid $line-color

  &.table--sortable.table--center

    th
      padding-left 35px

      &:first-child
        padding-left 1.5rem

.table-responsive
  display table
  position relative

  @media(max-width 1199px)
    scrollbar-color: #EA5E21 #F2F2F2;
    scrollbar-width: thick;
    display: block;
    width: 100%;
    overflow-x: auto; 
    -webkit-overflow-scrolling: touch;

    &::-webkit-scrollbar
      width 16px /* ширина для вертикального скролла */
      height 16px /* высота для горизонтального скролла */
      background-color #F2F2F2

    &::-webkit-scrollbar-thumb
      background-color #EA5E21
      border-radius 8px

    &::-webkit-scrollbar-thumb:hover
      background-color #EA5E21

  &-arrow-left,
  &-arrow-right
    position absolute
    top 50%
    left -32px
    width 64px
    height 64px
    border-radius 50%
    background-color #fff
    box-shadow 0px 3px 6px #00000029
    margin-top -32px
    cursor pointer
    z-index 10

    &:after
        content ''
        display block
        border-right 2px solid #074B84
        border-top 2px solid #074B84
        -webkit-transform rotate(-135deg)
        transform rotate(-135deg)
        position absolute
        top 50%
        left 50%
        width 12px
        height 12px
        margin -6px 0 0 -4px
        z-index 10

  &-arrow-right
    left auto
    right -32px
    
    &:after
        -webkit-transform rotate(45deg)
        transform rotate(45deg)
        margin -6px 0 0 -8px