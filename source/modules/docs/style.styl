@import '../../styl/component-include.styl'

.b-docs-block
  display block
  border 1px solid $line-color
  padding 40px
  font-family $roboto
  
  @media( max-width 767px )
    padding 15px

  &__item
    font-family $roboto

  &__body
    display flex
    align-items center
    
    @media( max-width 767px )
      align-items flex-start

  &__icon
    width 65px
    height 86px
    background-repeat no-repeat
    background-position center
    background-size contain
    margin-right 40px
    margin-bottom 5px
    
    @media( max-width 767px )
      width 40px
      height 50px
      margin-right 15px

  &__text
    width calc( 100% - 48px - 40px )
    
    a
      display inline-block
      margin-bottom 5px
      word-break break-word

      @media(max-width 767px)
        line-height 1.2
        font-size .8em

  &__data
    display block
    
    span
      display inline-block
      vertical-align baseline
      white-space nowrap
      font-size $12px
      margin-right 30px
      line-height 30px
          
      @media( max-width 767px )
        margin-right 0
        display block
  
  .btn
  
    &,
    &:hover,
    &:focus,
    &:active
      color #9b9b9b !important
      
    &.active
      
      &,
      &:hover,
      &:focus,
      &:active
        color #f39442 !important
          
    @media( max-width 767px )
      display inline-block
      margin-top 7px

  &.b-docs-block--small
    padding 0
    border none
    font-size $11px

    .b-docs-block__icon
      width 30px
      height 40px
      margin-right 20px
      margin-bottom 0
      flex-shrink 0

    .b-docs-block__data

      span
        font-size $11px
      
  &__collapsed
    margin-top 15px
    margin-left 105px
    display none
        
    @media( max-width 767px )
      margin-left 55px
    
    .b-docs-block
    
      &__item
        display flex
        align-items center
        margin-bottom 25px
        opacity 0
        transform( translateX( 50px ))
        transition( all .5s ease .7s )
        
        @media( max-width 767px )
          align-items flex-start
        
        &:nth-child(1)
          transition-delay .3s
        
        &:nth-child(2)
          transition-delay .4s
        
        &:nth-child(3)
          transition-delay .5s
        
        &:nth-child(4)
          transition-delay .6s
      
      &__icon
        width 24px
        height 33px
        margin-right 10px
        margin-bottom 5px

      &__text
        width calc( 100% - 24px - 20px )
        font-size $11px
        
        a
          margin-bottom 3px

      &__data
        display block
        
        span
          font-size $10px
          line-height 24px
          
    &.active
      
      .b-docs-block
    
        &__item
          opacity 1
          transform( translateX(0))

  &--gray
    background-color $light-gray
    padding 20px 16px !important
    border-radius 8px

  &--with-dots

    .b-docs-block__icon
      margin-right 10px !important

    .b-docs-block__text

      a
        font-size $16px
        font-weight $bold

    .b-docs-block__data span
      font-size $12px
      line-height normal

  &__more
    position relative

    &__button
      display block
      width 32px
      height 32px
      border-radius 5px
      position relative
      background-color #F0F5FC
      background-repeat no-repeat
      background-position center
      background-size cover
      margin-left 35px

    &__files
      position absolute
      top calc( -54px / 2 - -32px / 2)
      right 42px
      box-shadow 0px 3px 6px #0000001A
      background-color #fff
      padding 11px 11px 11px 23px
      border-radius 7px
      display flex
      justify-content space-between
      align-items center
      opacity 0
      transition(opacity .3s ease)
      z-index -1

      &--show
        opacity 1
        z-index 1

      span
        font-size $12px
        white-space nowrap
        margin-right 14px

      a
        display inline-block
        white-space nowrap
        padding-left 34px
        background-repeat no-repeat
        background-position left center
        background-size contain
        line-height 32px
        margin-left 16px
        font-size $9px



