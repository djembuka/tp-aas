@import '../../styl/component-include.styl'

.b-check-detail-sign

  &-error
    position fixed
    top 0
    left 0
    width 100%
    height 100vh
    background-color #000000bb
    display flex
    justify-content center
    align-items center
    z-index 1000

    &__content
      background #a00
      border-radius 10px
      padding 20px
      color #fff

  &-loader
    min-height 300px
    display flex
    justify-content center
    align-items center

  .circle-loader
    justify-content center

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1

.b-check-detail-sign

    .b-docs-block
    
        &__item
            display flex
            justify-content space-between

        &__signed,
        &__button
            display flex
            justify-content flex-end
            align-items center
            padding-left 20px