@import '../../styl/component-include.styl'

.b-profile-company

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-profile-company

  article > h3
    margin-top 0
  
  &__photo
    background-color $line-color
    border-radius 10px
    height 200px
    position relative
    margin-bottom 110px

    i
      position absolute
      top 30px
      left 50%
      font-style  normal
      margin-left -119px
      border-radius 51%
      background-bg()
      width 236px
      height 236px
      z-index 1

      span
        position absolute
        top 148px
        left calc(50% - 170px / 2)
        right 0
        height 48px
        line-height 48px
        border-radius 24px
        text-align center
        color #fff
        font-size $16px
        width 170px
        z-index 2

  &-info
    display flex
    flex-wrap wrap
    align-items flex-start
    gap 4px var(--twpx-table-padding-m, 16px)
    margin-bottom 32px

    &__item
      color var(--twpx-text-primary, #3B3B3B)
      font-family $roboto
      font-size $12px
      line-height 24px
      white-space nowrap

    @media(max-width 767px)
      flex-wrap nowrap
      overflow-x auto
      margin-bottom 16px
