@import '../../styl/component-include.styl'

// Переиспользуемый класс для серой плашки со скруглениями
.b-content-panel
  background-color $light-gray
  border-radius 10px
  padding 30px

  h3:first-of-type
    margin-top 0

// Основной блок документов
.b-block-documents
  display block

  &__title
    margin-bottom 1.25rem

  // Grid контейнер для карточек
  &__grid
    display grid
    grid-template-columns repeat(2, 1fr)
    gap 32px

    @media( max-width 991px )
      grid-template-columns 1fr

  // Стили для карточки файла
  &__card
    background-color #fff
    padding 0 30px 10px
    border-radius 10px
    height 100%

    &-title
      min-height 80px
      line-height 1.2
      display flex
      align-items center
      font-family $roboto
      font-weight $bold
      border-bottom 1px solid $line-color
      padding 10px 0
      margin-bottom 10px

  // Стили для элемента документа
  &__item
    font-family $roboto
    --aas-docs-block-icon-width 65px
    --aas-docs-block-icon-height 86px
    --aas-docs-block-gap 32px
    --aas-docs-block-button-width 0px

    @media( max-width 991px )
      --aas-docs-block-gap 16px

    &--button
      flex-shrink 0
      --aas-docs-block-icon-margin 16px
      --aas-docs-block-button-width 38px

    &--32x44
      --aas-docs-block-icon-width 32px
      --aas-docs-block-icon-height 44px
      --aas-docs-block-gap 16px

  &__body
    display flex
    align-items center
    gap var(--aas-docs-block-gap)
    
    @media( max-width 991px )
      align-items flex-start

  &__icon
    width var(--aas-docs-block-icon-width)
    height var(--aas-docs-block-icon-height)
    background-repeat no-repeat
    background-position center
    background-size contain
    margin-bottom 5px
    flex-shrink 0
    
    @media( max-width 991px )
      width 40px
      height 50px

  &__text
    width 100%
    
    a
      display inline-block
      margin-bottom 5px
      word-break break-word

      @media(max-width 991px)
        line-height 1.2
        font-size .8em

  &__data
    display block
    
    span
      display inline-block
      vertical-align baseline
      white-space nowrap
      font-size $12px
      margin-right 30px
      line-height 30px
          
      @media( max-width 991px )
        margin-right 0
        display block
