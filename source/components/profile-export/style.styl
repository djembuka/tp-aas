@import '../../styl/component-include.styl'

.b-profile

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1
    
.b-profile
  
  &-export
    background-color $light-gray
    gap 40px
    border-radius 8px

    h3
      margin-top 0