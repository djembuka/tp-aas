.b-files-collection

  &__name
    font-family $roboto
    font-size $18px
    font-weight $bold
    margin-bottom 10px

  &__description,
  &__hint
    font-size $14px

  &-info

    .b-docs-block
    
      &__item
        background-color #fff
        border-radius 10px
        margin-bottom 2px
        padding 16px 32px
        display flex
        justify-content space-between
        align-items center

      &__text
        width 100%
      
        a
          font-weight $bold

      &__data
        line-height 16px

        span
          line-height 16px
        
        a
          font-weight normal
          margin-bottom 0

      &__icon
        width 40px
        height 50px
        margin-right 16px
        margin-bottom 0
        flex-shrink 0

      &__item--empty .b-docs-block__icon
        width 35px
        height 35px