.b-files-collection

  &__name
    font-family $roboto
    font-size $18px
    font-weight $bold
    margin-bottom 10px

  &__description,
  &__hint
    font-size $14px

  &-info

    .b-docs-block
    
      &__item
        background-color #fff
        border-radius 10px
        margin-bottom 2px
        padding 16px 32px
        display flex
        justify-content space-between
        align-items center

      &__body
        margin-right 10px

      &__text
        width 100%
      
        a
          font-weight $bold

      &__data
        line-height 16px

        span
          line-height 16px
        
        a
          font-weight normal
          margin-bottom 0

      &__icon
        width 48px
        height 48px
        margin-right 16px
        margin-bottom 0
        flex-shrink 0

      &__item--empty .b-docs-block__icon
        
        &,
        svg
          width 48px
          height 48px

      @media(max-width 575px)

        &__item
            padding-right 20px
            padding-left 20px
            display block

            [class^='label-']
                margin 10px 0 0 50px
                text-align left

        &__icon
            margin-right 10px

        &__data span
            white-space normal

  &-archive
    background-color #fff
    padding 0 30px 10px
    border-radius 10px

    &__title
      min-height 80px
      line-height 1.2
      display flex
      align-items center
      font-family $roboto
      font-weight $bold
      border-bottom 1px solid $line-color
      padding 5px 0
      margin-bottom 10px

    .b-docs-block
    
      &__item
        padding-right 0
        padding-left 0

      &__text
        
        a
          font-weight normal