.multy-control-wrapper,
.multy-collection-wrapper
  position relative

  &__remove.btn-delete
    position absolute
    top -12px
    right calc(50% + 15px - 12px)
    width 24px
    height 24px
    cursor pointer
    transition( opacity .5s ease )
    z-index 10

    &:hover
      opacity .7

    @media(max-width 991px)
      right -12px

  .anim &

    input:not([type=checkbox]),
    input:not([type=radio]),
    textarea
      transition( background-color 1s ease )

    label
      transition( all 1s ease )

  .new &

    &:last-of-type

      input:not([type=checkbox]),
      input:not([type=radio]),
      textarea
        background-color #e7f8e8

      label
        color #74c37a