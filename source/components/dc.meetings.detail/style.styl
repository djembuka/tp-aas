@import '../../styl/component-include.styl'

.b-dc-meetings-detail

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1

/*future extensions*/
.b-tabs-menu
  font-family $roboto
  font-size $14px
  position relative

  &__wrapper
    display flex
    column-gap 20px
    height 48px
    overflow-x auto
    overflow-y hidden
    position relative
    scrollbar-color #ccc #fff
    scrollbar-width thin
    z-index 20

    &::-webkit-scrollbar
      width 4px
      height 4px
      background-color #fff

    &::-webkit-scrollbar-thumb
        background-color #ccc
        border-radius 2px

    &::-webkit-scrollbar-thumb:hover
        background-color #c0c0c0

  &:after
    content ''
    position absolute
    bottom 0
    left 0
    right 0
    border-bottom 1px solid $line-color
    z-index 10

  a
    height 48px
    display flex
    align-items center
    white-space nowrap
    border-bottom 1px solid transparent

    &.active
      border-bottom 1px solid $text-color
      color #3B3B3B
      cursor default
      pointer-events none

.b-dc-meetings-detail

  &__docs
  
    &__files
      display flex
      flex-direction column
      row-gap 16px

  &__data
    
    .b-copy-icon
      width 16px
      height 16px
      background-repeat no-repeat
      background-position center
      background-size contain
      margin-left 16px
      flex-shrink 0
      -webkit-transition( opacity .2s linear )
      transition( opacity .2s linear )
      opacity 0
      position relative

      @media(max-width 767px)
        display none

      &__note
        position absolute
        top -31px
        left 16px
        background #F0F5FC
        border-radius 3px
        color #074C86
        font-family $roboto
        font-size $11px
        line-height 29px
        padding 0 10px
        white-space nowrap
        opacity 0
        -webkit-transition( opacity .2s linear )
        transition( opacity .2s linear )
        pointer-events none

        &.b-copy-icon__note--show
          opacity 1

    .col-lg-6 table.table
      margin-bottom 0

      th,
      td
        border-bottom none !important
        padding-top 1.25rem
        padding-bottom 1.25rem

      @media (max-width: 575px)
        th:nth-child(2),
        td:nth-child(2)
          display table-cell

    .col-lg-6 .table
      font-family $roboto

      tr
        border-bottom 1px solid $line-color
    
        &:first-child
          border-top 1px solid $line-color

        &:hover
          background-color transparent

      th
        width 35%
        vertical-align top

      td
        display flex
        align-items center
        text-align left !important

        &:hover
        
          .b-copy-icon
            opacity 1

  