@import '../../styl/component-include.styl'


.b-filter-table

  &.ph-block
    
    &.ph-block--animated
      
      .ph-content
        position static
        width auto
        opacity 1
        
      .ph
        position absolute
        top 0
        left 0
        width 100%
        opacity 0
        z-index -1

.b-filter-table

  &__pagination
    display flex
    justify-content space-between
    align-items center

    @media( max-width 767px )
      flex-wrap wrap

  &__all
    text-align left

    @media( max-width 767px )
      text-align center
      width 100%
      order 2
      margin-top 30px

  h3
    margin-top 0
    margin-bottom 40px

  .b-num-block
  
    &--counter
      cursor pointer

      &__b
        display inline-block

  #inbox-filter
    display flex
    justify-content flex-start
    gap 30px

  &__form

    form
      display flex
      justify-content space-between
      align-items flex-end

      @media( max-width 575px )
        display block

  .b-form

    &-field
      width calc( 100% - 178px )

      label
        font-size $10px
        display block
        margin-bottom 8px

      @media( max-width 575px )
        width 100%

  input.b-form-input
    background-color $line-color
    border-radius 5px
    padding 10px 15px
    height 48px
    line-height 28px
    font-size $14px
    border 0
    width 100%

    &::selection
      background-color $secondary-color
      color #fff
    
    &[type=search]:focus
      outline none
      border-bottom 0

  input[type="search"]
    -webkit-appearance textfield
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box

  table.table
    font-family $roboto

    th
      cursor pointer

    th,
    td
      font-size $14px
      text-align left
      vertical-align middle
      border-top none
      border-bottom 1px solid $line-color

      &.asc,
      &.desc
        background-color #f2e4d866

      // @media( max-width 1399px )

      //   &:nth-child(6)
      //     display table-cell

      // @media( max-width 1199px )

      //   &:nth-child(5)
      //     display table-cell

      // @media( max-width 991px )

      //   &:nth-child(4) 
      //     display table-cell

      // @media( max-width 575px )

      //   &:nth-child(2),
      //   &:nth-child(6)
      //     display table-cell

    th

      &.asc,
      &.desc
        color $secondary-color-2
        position relative

        &:before
          content ''
          width 17px
          height 17px
          border-radius 51%
          position absolute
          top 50%
          right 15px
          margin-top -8px
          background-color #EA5E21
          z-index 1

        &:after
          content ''
          width 5px
          height 5px
          border-right 1px solid #fff
          border-bottom 1px solid #fff
          transform( rotate( 45deg ))
          position absolute
          top 50%
          right 21px
          margin-top -3px
          z-index 2

      &.asc

        &:after
          transform( rotate( -135deg ))
          margin-top -1px

    td

      &.normal
        color $secondary-color-2

    tbody

      &.body--new
        transition-fn( all 0.3s ease)
        overflow hidden
        
        tr
          opacity 1

        tr:not(.tr--show)
          display none
          opacity 0

      tr
        transition-fn( background-color .5s ease )
      
        &:hover
          background-color #fcfcfc

        &[data-url]
          cursor pointer

        &.tr--new

          td
            background-color #F0F5FC

            &.desc,
            &.asc
              background-color #F1F2F5

  .table tbody+tbody
    border-top 0

.text-normal
  color #F2762E

.form-control-wrapper
  position relative

.form-control-select + label
  color #2b2b2b
  position absolute
  top 0
  left 15px
  font-size 0.69rem
  cursor text
  transition-fn( transform 0.2s ease-out)
  transform-origin 0% 100%
  text-align initial
  transform( translateY(-22px))

.form-control-select .vs__dropdown-toggle {
  background-color: $form-control-color;
  border: 0;
  border-radius: 3px;
}
.form-control-select .vs__search, .form-control-select .vs__search:focus {
  height: 48px;
  margin: 0;
  padding: 0 15px;
  border: 0;
}
.form-control-select input.vs__search[type=search], .form-control-select input.vs__search:focus[type=search] {
  -webkit-appearance: none;
  border-radius: 0;
}
.form-control-select .vs__dropdown-toggle {
  padding: 0;
}
.form-control-select .vs__selected-options {
  padding: 0;
}
.form-control-select .vs__selected {
  position: absolute;
  pointer-events: none;
  margin: 0;
  padding: 0;
  border: 0;
  height: 48px;
  padding: 0 15px;
  font-size $14px
  z-index: 1;
}
.form-control-select input[type=search]:focus:not([readonly]) {
  border: 0 !important;
}
.form-control-select .vs__dropdown-menu {
  padding: 0;
  box-shadow: 0 5px 5px #eee;
  border: 0;
  border-radius: 0 0 5px 5px;
  font-size $14px
}
.form-control-select .vs__dropdown-option {
  line-height 1.2
  padding 12px 15px
  white-space normal
	color: #3b3b3b;
  margin: 0;
}
.form-control-select .vs__dropdown-option:hover {
	cursor: pointer
}
.form-control-select .vs__dropdown-option--highlight {
  background: $form-control-color;
	color: #5F7696

}
.form-control-select .vs__clear {
  display: none !important;
}
.form-control-select input[type=search] {
  width: 0;
}
.form-control-select .vs__actions {
  padding: 0 15px 0 3px;
}
.form-control-select .vs__search
  
  &,
  &:focus
    font-size $14px

.mx-input {
  font-size: 0.88rem !important;
  padding: 0 30px 0 15px !important;
}
.mx-icon-calendar {
  width: 16px;
  height: 16px;
  background: url('/local/templates/aas/images/calendar.svg') no-repeat center;
  background-size: cover;
  cursor: pointer;
  right: 15px !important;
}
.mx-icon-calendar svg {
  display: none;
}
.b-filter-table .mx-datepicker {
  width: 100% !important;
}
.mx-datepicker+label {
  pointer-events: none;
}

.b-input-clear {
  position: absolute;
  top: 50%;
  right: 10px;
  width: 16px;
  height: 16px;
  cursor: pointer;
  background: url( 'https://auditor-sro.org/local/templates/aas/images/cancel.svg' ) no-repeat center;
  background-size: 16px;
  margin-top: -8px;
  z-index: 1;
}

.b-dc-questions

  table td
  
    &:first-child
      width 180px
  
    &:nth-child(2)
      width 100px
  
    &:nth-child(3)
      width 100px
  
    &:last-child
      width 150px

  #inbox-filter

    > div
      width calc((100% - 30px * 4) / 9 * 3)

      &:first-child
        width calc((100% - 30px * 4) / 9 * 2)

    @media( max-width 1199px )
      flex-wrap wrap
      
      > div
        width calc( (100% - 30px) / 2 )

        &:first-child
          width 100%

    @media( max-width 767px )
      flex-wrap wrap
      
      > div
        width 100%