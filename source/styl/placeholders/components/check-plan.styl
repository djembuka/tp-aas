.b-check-plan

  &.ph-block
    position relative
  
  .ph

    & > div:first-child
      display grid
      column-gap 16px
      grid-template-columns repeat(4, 1fr)
      margin-bottom 32px

      div

        &:before
          content ''
          display block
          background-color $placeholder-color
          height 8px
          margin-bottom 5px
          width 45%

        &:after
          content ''
          display block
          background-color $placeholder-color
          height 39px

    & > div:last-child
      display grid
      grid-template-columns 50% 50%
      grid-template-rows 80px
      grid-auto-rows 32px
      row-gap 16px
      column-gap 32px

      div

        &:first-child
          grid-column: span 2;

        &
          border-radius 4px
          background-color $placeholder-color
        
    &-content
      position absolute
      top 0
      left 0
      width 100%
      transition-fn( opacity .5s ease )
      opacity 0
      z-index 0